---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---
<section class="mt-4 flex flex-col items-center">
    <h1 class="mb-2">Rese√±as del blog</h1>
    <section>
        <ul class="grid grid-cols-2 gap-4 justify-items-center">
            {
                posts.map((post) => (
                    <li>
                        <a href={`/blog/${post.id}/`}>
                            <img width={520} height={260} src={post.data.heroImage} alt="" class="rounded-md" />
                            <h4 class="title">{post.data.title}</h4>
                            <p class="date">
                            </p>
                        </a>
                    </li>
                ))
            }
        </ul>
    </section>
</section>